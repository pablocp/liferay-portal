{
	"type": "object",
	"patternProperties": {
		"^[a-zA-Z0-9_.]+$": { "$ref": "#/definitions/fieldStructure" }
	},
	"additionalProperties": false,

	"definitions": {
		"fieldStructure": {
			"type": "object",
			"properties": {
				"calculatedValueExpression": { 
					"$ref": "#/definitions/localizedString" 
				},
				"dataType": { "$ref": "fieldDataTypes" },
				"indexType": { "enum": [ "text", "keyword", "" ] },
				"multiple": { "type": "boolean" },
				"nestedFields": { "$ref": "#" },
				"repeatable": { "type": "boolean" },
				"validation": { "type": "string" }
			},
			"additionalProperties": false
		},

		"fieldDataTypes": {
			"type": "string",
			"pattern": "([a-zA-Z0-9]|-|_)+"
		},

		"localizedString": {
			"type": "object",
			"patternProperties": {
				"^[a-z]{2}(_[a-zA-Z]+)*$": { "type": "string" }
			},
			"additionalProperties": false
		}
	}
}