{
	"type": "object",
	"patternProperties": {
		"^[a-zA-Z0-9_.]+$": { "$ref": "#/definitions/fieldData" }
	},
	"additionalProperties": false,

	"definitions": {
		"fieldData": {
			"type": "object",
			"properties": {
				"value": { "$ref": "#/definitions/localizedString" }
			},
			"additionalProperties": false
		},

		"localizedString": {
			"type": "object",
			"patternProperties": {
				"^[a-z]{2}(_[a-zA-Z]+)*$": { "type": "string" }
			},
			"additionalProperties": false
		}
	}
}